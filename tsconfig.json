{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": ["./*"],
            "~/lib/*": ["./lib/*"],
            "@/tw/*": ["./components/tw/*"],
            "@/tw": ["./components/tw"],
            "convex/*": ["./convex/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "nativewind-env.d.ts"
    ]
}
